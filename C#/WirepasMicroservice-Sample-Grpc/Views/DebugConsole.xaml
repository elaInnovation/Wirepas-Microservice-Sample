<UserControl x:Class="WirepasMicroservice_Sample.Views.DebugConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WirepasMicroservice_Sample.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel x:Name="stackedOptions" HorizontalAlignment="Right">
            <Button x:Name="btnClear" FontFamily="Segoe MDL2 Assets" Content="&#xEF19;" FontSize="16" Width="20" Height="20" Margin="5" Click="btnClear_Click"/>
        </StackPanel>
        <ListView x:Name="listDebugItems" Grid.Row="1" Margin="5"/>
    </Grid>
</UserControl>
